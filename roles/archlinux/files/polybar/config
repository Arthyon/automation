[colors]
background = #262626

overlay = #3D3e40
text = #f3f3f5

background-highlight = #000000

red = #dc322f
yellow = #859900
green = #55aa55

orange = #b58900
dark-orange = #cb4b16 
light-grey = #efefef
grey = #586e75
dark-grey = #55

[global/wm]
margin-top = 5
margin-bottom = 5
margin-left = 5
margin-right = 5



[bar/main]
monitor = ${env:MONITOR:}
override-redirect = false
width = 100%
height = 27
offset-x = 0
offset-y = 0


background = ${colors.background}
foreground = ${colors.text}
linecolor = ${colors.background-highlight}

border-bottom-size = 2
border-bottom-color = ${colors.overlay}

spacing = 1
lineheight = 1
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
separator = "|"

font-0 = FuraMono-Regular:size=10;3
font-1 = unifont:size=6:heavy;-2
font-2 = "Font Awesome 6 Brands:style=Regular:pixelsize=10;2"
font-3 = "Font Awesome 6 Free:style=Solid:pixelsize=10;2"

modules-left = i3 spotify
modules-right = pulseaudio wlan battery date language powermenu

tray-position = center
tray-padding = 5
tray-background = #222222
tray-detached = false

;wm-restack = bspwm

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
tail = false
interval = 10
label =  %output%

[module/language]
type = custom/script
exec = ~/.config/polybar/inputlang.sh
tail = false
interval = 1
format-foreground = ${colors.light-grey}

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true

label-focused = %index%
label-focused-background = ${colors.overlay}
label-focused-underline= ${colors.overlay}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-urgent = %index%!
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-visible = %index%
label-visible-foreground = #55
label-visible-padding = 2

[module/cpu]
type = internal/cpu
interval = 2

format = <label> <bar-load>
label = CPU

bar-load-width = 10
bar-load-foreground-0 = ${colors.green}
bar-load-foreground-1 = ${colors.green}
bar-load-foreground-2 = ${colors.yellow}
bar-load-foreground-3 = ${colors.red}
bar-load-gradient = false
bar-load-indicator = │
bar-load-indicator-font = 2
bar-load-indicator-foreground = ${colors.light-grey}
bar-load-fill = ─
bar-load-fill-font = 2
bar-load-empty = ─
bar-load-empty-font = 2
bar-load-empty-foreground = ${colors.grey}


[module/memory]
type = internal/memory
interval = 2

format = <label> <bar-used>
label = RAM

bar-used-width = 10
bar-used-foreground-0 = ${colors.green}
bar-used-foreground-1 = ${colors.green}
bar-used-foreground-2 = ${colors.yellow}
bar-used-foreground-3 = ${colors.red}
bar-used-gradient = false
bar-used-indicator = │
bar-used-indicator-font = 2
bar-used-indicator-foreground = ${colors.light-grey}
bar-used-fill = ─
bar-used-fill-font = 2
bar-used-empty = ─
bar-used-empty-font = 2
bar-used-empty-foreground = ${colors.grey}


[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <ramp-signal> <label-connected>


format-disconnected-underline = ${colors.red}

label-connected-font=0
label-connected=
label-disconnected =  
label-disconnected-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-0-foreground = ${colors.red}
ramp-signal-1-foreground = ${colors.orange}
ramp-signal-2-foreground = ${colors.yellow}
ramp-signal-3-foreground = ${colors.green}
ramp-signal-4-foreground = ${colors.green}



[module/date]
type = internal/date
date = %d.%m.%Y - %H:%M
date-alt = %Y-%m-%d - %H:%M
interval = 5


[module/volume]
type = internal/alsa
master-mixer= Master

format-volume = <label-volume> <bar-volume>

label-volume = 
label-volume-foreground = ${colors.light-grey}

label-muted = 
label-muted-foreground = ${colors.dark-grey}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${colors.light-grey}
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.grey}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn =  %temperature%
label-warn-foreground = ${colors.red}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.light-grey}


[module/powermenu]
type = custom/menu

label-open =  
label-open-foreground = #e60053
label-close = 
label-close-foreground = #e60053
label-separator = |
label-separator-foreground = #55

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-muted = 
label-volume = %percentage%% 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

poll-interval = 5

label-full =  %percentage%%
label-discharging =  %percentage%% %consumption%w
label-charging =  %percentage%%  %consumption%w


